{% extends 'base_admin.html.twig' %}

{% block title %}Editar Usuario{% endblock %}

{% block body %}
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Inicio</a></li>
    <li class="breadcrumb-item"><a href="{{ path('admin-usuarios') }}">Usuarios</a></li>
    <li class="breadcrumb-item active"><a href="{{ path('admin-usuarios-editar', { user: usuario.id }) }}">Editar</a></li>
</ol>
<div class="container-fluid">
    <div id="ui-view">
        <h1>Editar Usuario</h1>

        <div class="card">
            <div class="card-header">
                <h2>Usuario</h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-3">
                        <div class="form-group">
                            <div>Username</div>
                            {{ usuario.username }}
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <div>Email</div>
                            {{ usuario.email }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {{ form_start(form) }}
            <div class="card">
                <div class="card-header">
                    <h2>Editar Usuario</h2>
                </div>
                <div class="card-body">
                    <span class="help-block">{{ form_errors(form) }}</span>
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="form-group">
                                {{ form_label(form.permisoAdministrador) }}
                                {{ form_widget(form.permisoAdministrador, { 'attr': {'class': 'form-control'} }) }}
                                <span class="invalid">{{ form_errors(form.permisoAdministrador) }}</span>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                {{ form_label(form.permisoBiblioteca) }}
                                {{ form_widget(form.permisoBiblioteca, { 'attr': {'class': 'form-control'} }) }}
                                <span class="invalid">{{ form_errors(form.permisoBiblioteca) }}</span>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                {{ form_label(form.permisoInventario) }}
                                {{ form_widget(form.permisoInventario, { 'attr': {'class': 'form-control'} }) }}
                                <span class="invalid">{{ form_errors(form.permisoInventario) }}</span>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                {{ form_label(form.permisoMatricula) }}
                                {{ form_widget(form.permisoMatricula, { 'attr': {'class': 'form-control'} }) }}
                                <span class="invalid">{{ form_errors(form.permisoMatricula) }}</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a href="{{ path('admin-usuarios') }}" class="btn btn-danger">Cancelar</a>
                </div>
            </div>
        {{ form_end(form) }}

    </div>
</div>

{% endblock %}
