{% extends 'base_admin.html.twig' %}

{% block title %}Cambiar Contraseña{% endblock %}

{% block body %}
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Inicio</a></li>
    <li class="breadcrumb-item"><a href="{{ path('admin-usuarios') }}">Usuarios</a></li>
    <li class="breadcrumb-item active"><a href="{{ path('admin-usuarios-password', { user: usuario.id }) }}">Cambiar Contraseña</a></li>
</ol>
<div class="container-fluid">
    <div id="ui-view">
        <h1>Cambiar Contraseña</h1>

        <div class="card">
            <div class="card-header">
                <h2>Usuario</h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-3">
                        <div class="form-group">
                            <div>Contraseña</div>
                            {{ usuario.username }}
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <div>Email</div>
                            {{ usuario.email }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {{ form_start(form) }}
            <div class="card">
                <div class="card-header">
                    <h2>Cambiar Contraseña</h2>
                </div>
                <div class="card-body">
                    <span class="help-block">{{ form_errors(form) }}</span>
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="form-group">
                                {{ form_label(form.justpassword) }}
                                {{ form_widget(form.justpassword, { 'attr': {'class': 'form-control'} }) }}
                                <span class="invalid">{{ form_errors(form.justpassword) }}</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a href="{{ path('admin-usuarios') }}" class="btn btn-danger">Cancelar</a>
                </div>
            </div>
        {{ form_end(form) }}

    </div>
</div>

{% endblock %}
