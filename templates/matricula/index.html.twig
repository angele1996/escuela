{% extends 'base_public.html.twig' %}
{% block title %}Matrícula{% endblock %}
{% block body %}

<div class="row">
<div class="col-12 col-md-8">
{{ form_start(form, {'attr': {'id': 'form_matricula'}}) }}
<div class="card mt-3">
    <div class="card-header">
        <h3 class="card-title">Formulario de Matricula</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-6">{{ form_row(form.rut) }}</div>
        </div>
    </div>
    <div class="card-footer">
        <button type="submit" class="btn btn-success">Continuar</button>
        <a class="btn btn-warning" href="{{ path('homepage') }}">Cancelar</a>
    </div>
</div>
{{ form_end(form) }}
</div>
