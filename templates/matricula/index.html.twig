{% block scripts %}
<script>
    $('#form_matricula').submit(function() {
        var rut = $('.input-rut').val();
        if(!$.validateRut(rut, null, { minimumLength: 4 })) {
            alert("El rut ingresado no es válido!");
            return false;
        }
        return true;
    });
</script>
{% endblock %}            