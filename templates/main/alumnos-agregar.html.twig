{% extends 'base_admin.html.twig' %}

{% block title %}Nuevo Alumno{% endblock %}

{% block body %}
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Inicio</a></li>
    <li class="breadcrumb-item"><a href="{{ path('main-alumnos-curso', { curso: curso.id }) }}">Alumnos</a></li>
    <li class="breadcrumb-item active"><a href="{{ path('main-alumnos-agregar', { curso: curso.id }) }}">Agregar</a></li>
</ol>
<div class="container-fluid">
    <div id="ui-view">
        <h1>Agregar Alumno</h1>

        {{ form_start(form) }}
            <div class="card">
                <div class="card-header">
                    <h2>Nuevo Alumno {{ curso }}</h2>
                </div>
                <div class="card-body">
                    <span class="help-block">{{ form_errors(form) }}</span>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                {{ form_label(form.nombres) }}
                                {{ form_widget(form.nombres, { 'attr': {'class': 'form-control'} }) }}
                                <span class="invalid">{{ form_errors(form.nombres) }}</span>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                {{ form_label(form.apellidos) }}
                                {{ form_widget(form.apellidos, { 'attr': {'class': 'form-control'} }) }}
                                <span class="invalid">{{ form_errors(form.apellidos) }}</span>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                {{ form_label(form.credencial) }} <i>(0 para numeros autom√°ticos)</i>
                                {{ form_widget(form.credencial, { 'attr': {'class': 'form-control'} }) }}
                                <span class="invalid">{{ form_errors(form.credencial) }}</span>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                {{ form_label(form.imageFile) }}
                                {{ form_widget(form.imageFile, { 'attr': {'class': 'form-control'} }) }}
                                <span class="invalid">{{ form_errors(form.imageFile) }}</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a href="{{ path('main-alumnos-curso', { curso: curso.id }) }}" class="btn btn-danger">Cancelar</a>
                </div>
            </div>
        {{ form_end(form) }}

    </div>
</div>

{% endblock %}
