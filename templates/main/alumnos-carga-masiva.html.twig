{% extends 'base_admin.html.twig' %}


{% block title %}Carga Masiva Alumno{% endblock %}

{% block body %}
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Inicio</a></li>
    <li class="breadcrumb-item"><a href="{{ path('main-alumnos-curso', { curso: curso.id }) }}">Alumnos</a></li>
    <li class="breadcrumb-item active"><a href="{{ path('main-alumnos-carga-masiva', { curso: curso.id }) }}">Carga Masiva</a></li>
</ol>
<div class="container-fluid">
    <div id="ui-view">
        <h1>Carga Masiva Alumno</h1>

        {{ form_start(form) }}
            <div class="card">
                <div class="card-header">
                    <h2>Carga Masiva Alumno {{ curso }}</h2>
                </div>
                <div class="card-body">
                    <span class="help-block">{{ form_errors(form) }}</span>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                {{ form_label(form.credencialInicial) }} <i>(0 para numeros autom√°ticos)</i>
                                {{ form_widget(form.credencialInicial, { 'attr': {'class': 'form-control'} }) }}
                                <span class="invalid">{{ form_errors(form.credencialInicial) }}</span>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="form-group">
                                {{ form_label(form.alumnos) }} <i>(un alumno por linea: apellidos "," nombres)</i>
                                {{ form_widget(form.alumnos, { 'attr': {'class': 'form-control'} }) }}
                                <span class="invalid">{{ form_errors(form.alumnos) }}</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a href="{{ path('main-alumnos-curso', { curso: curso.id }) }}" class="btn btn-danger">Cancelar</a>
                </div>
            </div>
        {{ form_end(form) }}

    </div>
</div>

{% endblock %}
