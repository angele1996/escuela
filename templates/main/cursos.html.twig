{% extends 'base_admin.html.twig' %}

{% block title %}Cursos{% endblock %}


{% block body %}
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Inicio</a></li>
    <li class="breadcrumb-item active"><a href="{{ path('main-cursos') }}">Cursos</a></li>
</ol>
<div class="container-fluid">
    <div id="ui-view">
        <h1>Cursos</h1>
        <div class="card">
            <div class="card-header">
                <h2>Listado</h2>
            </div>
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-sm-12">
                        <a href="{{ path('main-cursos-agregar') }}" class="btn btn-success">Agregar</a>
                    </div>
                </div>
                {% if lista|length > 0 %}
                    <table class="table table-responsive-sm table-bordered table-striped table-sm">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Año</th>
                                <th>Nombre</th>
                                <th></th>
                            </tr>   
                        </thead>
                        <tbody>
                        {% set i = 0  %}
                        {% for item in lista %}
                            {% set  i = i + 1  %}
                            <tr>
                                <td>{{ i }}</td>
                                <td>{{ item.anio|default('') }}</td>
                                <td>{{ item.nombre|default('')|upper }}</td>
                                <td>
                                    <a href="{{ path('main-cursos-editar', { curso: item.id }) }}" class="btn btn-success">Editar</a>
                                    <a href="{{ path('main-cursos-eliminar', { curso: item.id }) }}" class="btn btn-danger" onclick="return confirm('¿Está seguro de eliminar este curso?');">Eliminar</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    No hay datos.
                {% endif %} 
            </div>
        </div>

    </div>
</div>

{% endblock %}

