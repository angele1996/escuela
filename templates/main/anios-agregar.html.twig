{% extends 'base_admin.html.twig' %}


{% block title %}Nuevo Año Académico{% endblock %}

{% block body %}
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Inicio</a></li>
    <li class="breadcrumb-item"><a href="{{ path('main-anios') }}">Año Académico</a></li>
    <li class="breadcrumb-item active"><a href="{{ path('main-anios-agregar') }}">Agregar</a></li>
</ol>
<div class="container-fluid">
    <div id="ui-view">
        <h1>Agregar Año Académico</h1>

        {{ form_start(form) }}
            <div class="card">
                <div class="card-header">
                    <h2>Nuevo Año Académico</h2>
                </div>
                <div class="card-body">
                    <span class="help-block">{{ form_errors(form) }}</span>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                {{ form_label(form.numero) }}
                                {{ form_widget(form.numero, { 'attr': {'class': 'form-control'} }) }}
                                <span class="invalid">{{ form_errors(form.numero) }}</span>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                {{ form_label(form.vigente) }}
                                {{ form_widget(form.vigente, { 'attr': {'class': 'form-control'} }) }}
                                <span class="invalid">{{ form_errors(form.vigente) }}</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a href="{{ path('main-anios') }}" class="btn btn-danger">Cancelar</a>
                </div>
            </div>
        {{ form_end(form) }}

    </div>
</div>

{% endblock %}
