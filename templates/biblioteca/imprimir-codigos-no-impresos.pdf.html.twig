<html>
<body>
<table border="1">
{% for row in lista_ejemplar|batch(2, '') %}
    <tr>
        {% for column in row %}
            <td align="center" cellpadding="0" cellspacing="0">
            {% if column %}
                <img src="{{ directorio }}{{ column.codigo }}.png" width="100" height="30"/>
                <br/>{{ column.codigo }}
                <br/>{{ column.libro.nombre }}
            {% endif %}
            </td>
        {% endfor %}
    </tr>
{% endfor %}
</table>
</body>
</html>