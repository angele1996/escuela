{% extends 'base_admin.html.twig' %}

{% block title %}Biblioteca{% endblock %}

{% block body %}
    {{ form_start(form) }}
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Actualizar Ejemplar</h3>
            </div>
            <div class="card-body">
                <span class="help-block">{{ form_errors(form) }}</span>
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group">
                            {{ form_label(form.estadoLibro) }}
                            {{ form_widget(form.estadoLibro, { 'attr': {'class': 'form-control select2'} }) }}
                            <span class="invalid">{{ form_errors(form.estadoLibro) }}</span>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            {{ form_label(form.ubicacion) }}
                            {{ form_widget(form.ubicacion, { 'attr': {'class': 'form-control select2'} }) }}
                            <span class="invalid">{{ form_errors(form.ubicacion) }}</span>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            {{ form_label(form.codigo) }}
                            {{ form_widget(form.codigo, { 'attr': {'class': 'form-control'} }) }}
                            <span class="invalid">{{ form_errors(form.codigo) }}</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a href="{{ path('biblioteca-libro', { libro: libro.id }) }}" class="btn btn-danger">Cancelar</a>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
