<!doctype html>
<html lang="es" class="h-100">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Colegio Dr. Willis Hoover K.{% endblock %}</title>
    <!-- Bootstrap CSS -->
    <link href="{{ asset('/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css') }}" rel="stylesheet">
    <link href="{{ asset('/css/colegio.css') }}?2021-11-21" rel="stylesheet">
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
  </head>
<body class="d-flex flex-column h-100">
<div class="bgimg">
    <nav class="navbar navbar-light bg-light">
        <div class="justify-content-between">
            <a class="navbar-brand" href="{{ path('homepage') }}">
                <img src="{{ asset('logo_hoover.jpg') }}" alt="" height="50">Colegio Dr. Willis Hoover K., La Cisterna
            </a>
            <a href="{{ path('app_login') }}" class="btn btn-primary">Acceso Profesor</a>
        </div>
    </nav>

    <div class="container">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        {% block body %}{% endblock %}
    </div>


    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <ul class="bd-footer-links ps-0 mb-3">
                <li><a href="https://colegiohooverlacisterna.cl/">Sitio Web Colegio Hoover La Cisterna</a></li>
                <li>Teléfono: 264659808</li>
                <li>Correo Electrónico: contacto.hoover.lc@fwh.cl</li>
            </ul>
        </div>
    </footer>

    <script src="{{ asset('/jquery/jquery-3.5.1.min.js') }}"></script>
    <script src="{{ asset('/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js') }}"></script>
    <script src="{{ asset('/bootstrap-datepicker/dist/locales/bootstrap-datepicker.es.min.js') }}"></script>
    <script src="{{ asset('rut/jquery.rut.min.js') }}"></script>

    <script>
        $(document).ready(function() {
            $('input').attr('autocomplete', 'off');

            $('.input-fecha').datepicker({
                language: "es"
            });

            window.setTimeout(function () { 
                $(".alert").alert('close'); 
            }, 10000);
        });    
    </script>

    {% block scripts %}{% endblock %}
</div>    
  </body>
</html>